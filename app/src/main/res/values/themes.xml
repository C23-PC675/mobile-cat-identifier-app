<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.CatIdentifierApp" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your light theme here. -->
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/orange</item>
        <item name="colorPrimaryVariant">@color/gray</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/crimson</item>
        <item name="colorSecondaryVariant">@color/crimson</item>
        <item name="colorOnSecondary">@color/black</item>

        <!-- Status bar color. -->
        <item name="android:statusBarColor" >?attr/colorPrimaryVariant</item>
    </style>
    
    <style name="TextContent">
        <item name="fontFamily">@font/poppins_medium</item>
    </style>

    <style name="TextContent.Heading1" parent="TextContent">
        <item name="android:textSize">24sp</item>
    </style>

    <style name="TextContent.Heading2" parent="TextContent">
        <item name="android:textSize">18sp</item>
    </style>

    <style name="TextContent.Headline" parent="TextContent">
        <item name="android:textColor">@color/orange</item>
    </style>

    <style name="Button">
        <item name="cornerRadius">20dp</item>
        <item name="android:padding">5dp</item>
        <item name="android:layout_margin">5dp</item>
        <item name="iconGravity">textTop</item>
        <item name="iconSize">24dp</item>
        <item name="android:textSize">10sp</item>
        <item name="fontFamily">@font/poppins_regular</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">75dp</item>
        <item name="android:layout_weight">1</item>
    </style>

    <style name="Theme.CatIdentifierApp" parent="Base.Theme.CatIdentifierApp" />
</resources>